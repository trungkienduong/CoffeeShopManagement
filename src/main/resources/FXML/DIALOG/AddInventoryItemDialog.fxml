<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="250.0" prefWidth="400.0" styleClass="dialog-pane"
            stylesheets="@../../ASSETS/STYLES/DIALOG/AddUnitCategoryDialog.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GUI.CONTROLLER.DIALOG.AddInventoryItemDialogController">

    <VBox alignment="CENTER" spacing="25" styleClass="content-box"
          AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <Label styleClass="dialog-title" text="Thêm mặt hàng mới" />

        <Pane styleClass="input-group">
            <Label styleClass="label-text" text="Tên mặt hàng:" />
            <TextField fx:id="unitNameField" layoutX="120" promptText="Nhập tên mặt hàng (vd: sữa, bột cà phê, đường)"
                       styleClass="text-input" />
        </Pane>

        <HBox alignment="CENTER" spacing="25" styleClass="button-group">
            <Button fx:id="confirmButton" styleClass="custom-button, confirm-button" text="Xác nhận" />
            <Button fx:id="cancelButton" styleClass="custom-button, cancel-button" text="Hủy" />
        </HBox>
    </VBox>
</AnchorPane>