<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="GUI.CONTROLLER.PANEL.InventoryPanelController"
            styleClass="main-panel"
            stylesheets="@../../ASSETS/STYLES/PANEL/InventoryPanel.css">

    <VBox AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          spacing="0">

        <!-- Top Control Section -->
        <HBox styleClass="control-section" spacing="15" alignment="CENTER_LEFT">
            <padding>
                <Insets left="15" right="15" top="10" bottom="10"/>
            </padding>
            <ComboBox fx:id="categoryFilter" promptText="Loại nguyên liệu"
                      styleClass="filter-combo"/>
            <ComboBox fx:id="unitFilter" promptText="Đơn vị tính"
                      styleClass="filter-combo"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="addButton" styleClass="control-button">
                <graphic>
                    <FontAwesomeIconView glyphName="PLUS" size="14" styleClass="button-icon"/>
                </graphic>
                <tooltip>
                    <Tooltip text="Thêm mới"/>
                </tooltip>
            </Button>
            <Button fx:id="editButton" styleClass="control-button">
                <graphic>
                    <FontAwesomeIconView glyphName="EDIT" size="14" styleClass="button-icon"/>
                </graphic>
                <tooltip>
                    <Tooltip text="Chỉnh sửa"/>
                </tooltip>
            </Button>
            <Button fx:id="deleteButton" styleClass="control-button">
                <graphic>
                    <FontAwesomeIconView glyphName="TRASH" size="14" styleClass="button-icon"/>
                </graphic>
                <tooltip>
                    <Tooltip text="Xóa"/>
                </tooltip>
            </Button>
            <Button fx:id="refreshButton" styleClass="control-button">
                <graphic>
                    <FontAwesomeIconView glyphName="REFRESH" size="14" styleClass="button-icon"/>
                </graphic>
                <tooltip>
                    <Tooltip text="Làm mới"/>
                </tooltip>
            </Button>
        </HBox>

        <!-- Scrollable Table Section -->
        <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS"
                    styleClass="table-scroll-pane">
            <TableView fx:id="inventoryTable" styleClass="inventory-table">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="indexColumn" text="STT" styleClass="index-column"/>
                    <TableColumn fx:id="imageColumn" text="Ảnh" styleClass="image-column"/>
                    <TableColumn fx:id="nameColumn" text="Tên nguyên liệu" styleClass="name-column"/>
                    <TableColumn fx:id="categoryColumn" text="Loại" styleClass="category-column"/>
                    <TableColumn fx:id="quantityColumn" text="Số lượng" styleClass="quantity-column"/>
                    <TableColumn fx:id="unitColumn" text="Đơn vị" styleClass="unit-column"/>
                    <TableColumn fx:id="priceColumn" text="Giá" styleClass="price-column"/>
                </columns>
                <placeholder>
                    <Label text="Không có dữ liệu" styleClass="no-data-label"/>
                </placeholder>
            </TableView>
        </ScrollPane>
    </VBox>
</AnchorPane>